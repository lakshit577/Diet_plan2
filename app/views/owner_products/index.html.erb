<!-- app/views/owner_products/index.html.erb -->
<div class="container">
  <h1><%=current_user.email%> Products</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Product Name</th>
        <th>Quantity</th>
      </tr>
    </thead>
    <tbody>
      <% @owner_products.each do |owner_product| %>
        <tr>
          <td><%= owner_product.id %></td>
          <td><%= owner_product.product.name %></td>
          <td><%= owner_product.qty %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
